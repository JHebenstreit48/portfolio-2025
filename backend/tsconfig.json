{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["./**/*.mts"],
  "exclude": ["node_modules"]
}
