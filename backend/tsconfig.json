{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@graphql/*": ["src/graphql/*"],
      "@utils/*": ["src/utils/*"],
      "@loaders/*": ["src/loaders/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["src/**/*.mts"],
  "exclude": ["node_modules"]
}
